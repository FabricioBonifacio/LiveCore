@model LiveCore.Models.Permissao

@{
    ViewBag.Title = "Deletar Permissão";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Deletar Permissão - @Html.DisplayFor(model => model.Nome)</h2>

<h3>Você tem certeza que deseja deletar a Permissão @Html.DisplayFor(model => model.Nome)?</h3>
<div>
    <h4>Permissao</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-default" /> |
        </div>
    }
</div>
<div>
    <p>
        <a href="@Url.Action("Index", "Permissao")" title="Voltar"><i class="fa fa-arrow-left"></i></a>
    </p>
</div>