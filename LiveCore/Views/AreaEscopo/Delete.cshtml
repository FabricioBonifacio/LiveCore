@model LiveCore.Models.AreaEscopo

@{
    ViewBag.Title = "Deletar Área de Escopo";
    Layout = "";
}

<div>

    Você tem certeza que deseja deletar a Área de Escopo @Html.DisplayFor(model => model.Nome)?
    @Html.HiddenFor(model => model.AreaEscopoID)

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Deletar" id="submit" hidden />
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>

        $(document).ready(function () {

            $("#submit").hide();
        });

    </script>

}