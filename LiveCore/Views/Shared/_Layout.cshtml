<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - LiveCore</title>
    @Styles.Render("~/Content/css")
  @*//  @Styles.Render("~/Content/jquery-ui-1.10.3.custom.min.css")*@
    @Styles.Render("~/Content/jquery-ui-1.10.0.custom.css")
    @Styles.Render("~/Content/font-awesome.min.css")
    @Styles.Render("~/Content/bootstrap-wysihtml5.css")
    @Scripts.Render("~/bundles/modernizr")
 
</head>
<body>
    <div id="tudo">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Live Core", "Index", "Home", null, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
        <div class="container body-content">
                @RenderBody()
        </div>
        <div class="footer">
            &copy; @DateTime.Now.Year - Live Core
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/Scripts/jquery.mask.min.js")
    @Scripts.Render("~/Scripts/wysihtml5.js")
    @Scripts.Render("~/Scripts/bootstrap-wysihtml5.js")
    @Scripts.Render("~/Scripts/bootstrap-paginator.js")
    @RenderSection("Scripts", required: false)


</body>
</html>
