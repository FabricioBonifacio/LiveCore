@model LiveCore.Models.ProximoPassoProposta

@{
    ViewBag.Title = "Create";
    Layout = "";
}

@{
    List<SelectListItem> listItems = new List<SelectListItem>();
    listItems.Add(new SelectListItem
         {
             Text = "Agendado",
             Value = "AG"
         });
    listItems.Add(new SelectListItem
         {
             Text = "Finalizado",
             Value = "FI",
         });

    List<SelectListItem> listItemsAlerta = new List<SelectListItem>();
    listItemsAlerta.Add(new SelectListItem
         {
             Text = "Horas",
             Value = "H"
         });
    listItemsAlerta.Add(new SelectListItem
         {
             Text = "Dias",
             Value = "D",
         });
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Descricao, new { @class = "control-label col-md-2" })
            <div class="col-xs-9">
                @Html.TextAreaFor(model => model.Descricao, new { @class = "form-control", @rows = "7" })
                @Html.ValidationMessageFor(model => model.Descricao)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DataAgendamento, new { @class = "control-label col-md-2" })
            <div class="col-xs-3">
                @Html.EditorFor(model => model.DataAgendamento, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DataAgendamento)
            </div>
            @Html.Label("Hora", new { @class = "control-label col-md-2" })
            <div class="col-xs-2">
                @Html.Editor("HoraAgendamento")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TempoAlerta, new { @class = "control-label col-md-2" })
            <div class="col-xs-2">
                @Html.EditorFor(model => model.TempoAlerta, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TempoAlerta)
            </div>
            <div class="col-xs-4">
                @Html.DropDownListFor(model => model.TipoAlerta, listItemsAlerta, "-- Selecione --", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TipoAlerta)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Status, new { @class = "control-label col-md-2" })
            <div class="col-xs-4">
                @Html.DropDownListFor(model => model.Status, listItems, "-- Selecione --", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Status)
            </div>
        </div>

        @Html.HiddenFor(model => model.DataCriacao)
        @Html.HiddenFor(model => model.PropostaID)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" id="submit" class="btn btn-default" hidden />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>

        $(document).ready(function () {

        });

    </script>

}
