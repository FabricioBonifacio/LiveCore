@model LiveCore.Models.Unidade

@{
    ViewBag.Title = "Nova Unidade";
    Layout = "";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.UnidadeSigla, new { @class = "control-label col-md-2" })
            <div class="col-xs-2">
                @Html.TextBoxFor(model => model.UnidadeSigla, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UnidadeSigla)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Nome, new { @class = "control-label col-md-2" })
            <div class="col-xs-4">
                @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Nome)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Salvar" class="btn btn-primary" id="submit" hidden />
                <input type="button" value="Salvar" class="btn btn-primary" id="submitColapso" hidden />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>

        $(document).ready(function () {

            
        });

    </script>

}
